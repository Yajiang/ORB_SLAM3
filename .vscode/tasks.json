{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",           // Source directory
                "-B", "build",       // Build directory
                "-G", "Unix Makefiles",        // Generator (change to "Unix Makefiles" or "MSBuild" as needed)
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Configure the CMake project"
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",   // Build directory
                "-j1",
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "CMake: Configure",
            "problemMatcher": ["$gcc"],
            "detail": "Build the CMake project"
        }
    ]
}